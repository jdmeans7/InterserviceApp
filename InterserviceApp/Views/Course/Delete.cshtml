@model InterserviceApp.Models.is_Course

@{
    ViewBag.Title = "Delete";
}


<div class="registerContainer">
    <h1 class="registerTitle" align="center">Delete Course</h1>
    <hr class="hrRegister" />

    <div class="regLeft">
        <span>@Html.DisplayNameFor(model => model.courseCode): </span>
        <span>@Html.DisplayFor(model => model.courseCode)</span>
    </div>
    <div class="regRight">
        <span>@Html.DisplayNameFor(model => model.desc): </span>
        <span>@Html.DisplayFor(model => model.desc)</span>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" />
        </div>
